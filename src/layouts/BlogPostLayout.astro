---
import Layout from "./Layout.astro";
import * as greatPost from "../pages/posts/como-iniciar-proyecto-en-astro.md";
---

<Layout title={greatPost.frontmatter.title}>
  <section class="container-post">
    <div class="wrapper-post">
      <slot />
    </div>
  </section>
</Layout>

