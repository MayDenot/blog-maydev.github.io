<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 12px;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
  }
  h1 {
    margin: 10px 0;
    font-size: 40px;
  }
  p {
    text-align: center;
    max-width: 75ch ;
  }
  a {
    text-decoration: none;
  }
