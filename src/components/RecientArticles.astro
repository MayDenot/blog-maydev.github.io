---
interface Props {
  title: string;
  paraph?: string;
  date?: string;
}

const { title, paraph, date } = Astro.props;
---

<article class="art-rec">
  <h3>{title} <span>{date}</span></h3>
  <p>{paraph}</p>
</article>

<style>
  .art-rec {
    width: 290px;
    padding: 10px;
    box-shadow: 0px 2px 2px rgba(50, 205, 50, 0.514);
    background-color: var(--bg-article-r);
    border-radius: 15px;
    margin-bottom: 10px;
    color: black;
  }
  .art-rec:hover {
    background-color: rgba(50, 205, 50, 0.589);
  }
  #html.darkmode .art-rec {
    color: #fff;
  }
  h3 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0;
    font-size: 14px;
  }
  p {
    font-size: 11px;
    margin: 0;
  }
  span {
    font-weight: 400;
    font-size: 11px;
    margin: 0;
    padding-right: 10px;
  }
  @media screen and (width >= 425px) {
    .art-rec {
      width: 350px;
    }
    h3 {
      font-size: 18px;
      margin: 0;
    }
    p {
      font-size: 12px;
      margin: 0;
    }
    span {
      padding-right: 0;
    }
  }
  @media screen and (width >= 768px) {
    .art-rec {
      width: 450px;
    }
  }
  @media screen and (width >= 1024px) {
    .art-rec {
      width: 470px;
    }
  }
  @media screen and (width >= 1440px) {
    .art-rec {
      width: 600px;
    }
    h3 {
      font-size: 23px;
    }
  }
</style>
